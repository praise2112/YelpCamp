<% include ../partials/header %>


    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-campground"></i>  Welcome To YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
            </p>
            <p>
            <form action="/campgrounds" method="get" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Campground Search..." class="form-control">
                    <input type="submit" value="Search" class="btn btn-outline-primary">
                </div>
            </form>
            </p>
        </div>
    </header>


    <div class="row text-center"><!--This style make the image occupy the same space-->
        <div class="col-md-12 ">
            <% if(nomatch !== null){ %>
                <h3><%= nomatch%></h3>

                <form action="/campgrounds" method="get" class="form-inline align-items-center">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Campground Search..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-outline-primary">
                    </div>
                </form>

            <% } %>
        </div>
        <!--reading campground data-->
        <% campgrounds.forEach((campground)=>{%>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img src="<%= campground.image%>" alt="" class="card-img-top img-fluid ">
                    <div class="card-body pb-0">
                    <h4 ><%= campground.name %></h4>
                        <% if (campground.rating === 0) { %>
                            <em>No reviews yet.</em>
                        <% } else { %>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star <% if (campground.rating > 1.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (campground.rating > 2.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (campground.rating > 3.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (campground.rating > 4.5) { %> checked <% } %>"></span>
                        <% } %>
                        <p>
                            <!--generate the show url. id id randomly generated by mongoose-->
                            <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More info</a>
                        </p>
                    </div>

                </div>

            </div>
        <% }); %>
    </div>




    <a href="/">Go To Home</a>

<% include ../partials/footer %>